source 'https://rubygems.org'

gem 'rails', '3.2.13'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'mysql2'
gem 'devise'

group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'therubyracer'
  gem 'less-rails'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'angularjs-rails'
gem 'twitter-bootstrap-rails'
gem 'phantomjs'
gem 'jasmine-rails'

group :test, :development do
  gem 'rspec-rails'
  gem 'teaspoon'
  gem 'simplecov', :require => false
end

group :test do
  gem 'cucumber-rails', :require => false
  gem 'cucumber-websteps'
  gem 'capybara'
  gem 'database_cleaner'
  gem 'factory_girl'
  gem 'email_spec'
  gem 'multi_test'
  gem 'simplecov'
end
